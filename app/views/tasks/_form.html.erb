<%= form_for(@task) do |f| %>
  <% if task.errors.any? %>
    <div id="task_explanation">
      <ul>
        <% task.errors.full_task.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '追加' %>
<% end %>